ra()}else alert("Saldo insuficiente ou valor inválido!")}else alert("Preencha o endereço da carteira!")}}function carregarPlanos(){let planos=[10000,20000,50000,100000,200000,500000],html="";planos.forEach(v=>{html+=`<div style='background:#111;padding:15px;border-radius:10px'><p>💰 <strong>${v.toLocaleString()} KZ</strong></p><p>🔁 Ganha ${(v/2).toLocaleString()} KZ</p><p>⏳ Duração: 7 dias</p><button onclick='investir(${v})'>Investir</button></div>`});document.getElementById("planosInvestimento").innerHTML=html}function investir(v){if(usuarioAtual.saldo>=v){usuarioAtual.saldo-=v;localStorage.setItem("usuarios",JSON.stringify(usuarios));alert("Investimento realizado com sucesso!")}else alert("Saldo insuficiente!")}function atualizarCarteira(){if(usuarioAtual){document.getElementById("saldoDisponivel").innerText=usuarioAtual.saldo.toFixed(2)+" KZ";document.getElementById("totalGeral").innerText=usuarioAtual.saldo.toFixed(2)+" KZ"}}</script></body></html>
